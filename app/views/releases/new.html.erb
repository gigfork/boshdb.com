<h1>Create a New Release</h1>

<%= form_for(@release) do |f| %>
  <% if @release.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@release.errors.count, "error") %> prohibited this release from being saved:</h2>

      <ul>
      <% @release.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br />
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :source_url, "Source URL" %>
    <%= f.text_field :source_url %>
  </div>
  <%= f.fields_for :version do |v_form| %>
	  <div class="field">
	    <%= v_form.label :download_url, "Download URL" %>
	    <%= v_form.text_field :download_url %>
	  </div>
  <% end %>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
	
  <div class="actions">
    <!-- <%= f.submit %> -->
	<button type="submit" class="btn btn-primary">Create Release</button>
  </div>
<% end %>