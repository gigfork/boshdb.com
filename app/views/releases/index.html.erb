<h1>Listing releases</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Source</th>
    <th>Download</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @releases.each do |release| %>
  <tr>
    <td><%= release.name %></td>
    <td><%= release.description %></td>
    <td><%= release.source %></td>
    <td><%= release.download %></td>
    <td><%= release.user_id %></td>
    <td><%= link_to 'Show', release %></td>
    <td><%= link_to 'Edit', edit_release_path(release) %></td>
    <td><%= link_to 'Destroy', release, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

